<%= render "shared/shop-header" %>

<%= form_with model:@shop,url:shop_registration_path,method: :put,local: true do |f| %>
  <%= render "shops/shared/error_messages", resource: resource %>
  <div class="edit-form-wrapper">
    <h3 class= "edit-title">基本情報</h3>
    <p>確認用パスワードは必ず入力してください</p>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :password %> <i>(パスワードを変更する場合のみ)</i><br />
      <%= f.password_field :password, autocomplete: "new-password",class:"input-default" %>
      <% if @minimum_password_length %>
        <br />
        <em>(半角英数字含めて６文字以上)</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(必ず入力してください)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password",class:"input-default" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>



    <div class="shop-add-form">
      <p class= "add-title">ーAddressー</p>
      <div class="area-form-content">
        <%= f.label :area %><br />
        <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"select-box active-hash-default", id:"item-area"}) %>
      </div>

      <div class="field">
        <%= f.label :city %><br />
        <%= f.text_field :city, autofocus: true, autocomplete: "city",class:"input-default" %>
      </div>

      <div class="field">
        <%= f.label :add_line %><br />
        <%= f.text_field :add_line, autofocus: true, autocomplete: "add_line",class:"input-default" %>
      </div>

      <div class="field">
        <%= f.label :build %><br />
        <%= f.text_field :build, autofocus: true, autocomplete: "build",class:"input-default" %>
      </div>
    </div>

    <div class="actions">
      <p>パスワードは入力しましたか？</p>
      <%= f.submit "修正する",class:"signup-submit" %>
    </div>
  </div>
<% end %>


