<%= render "shared/second-header"%>
<h2 class = "page-title">Sign up</h2>

<%= form_with model: @user, url: user_registration_path,method: :post, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class = "form-wrapper">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "nickname", class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "email", class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(半角英数字含めて６文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"input-default" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-default" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" ,class:"signup-submit"%>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links",class:"shared-link" %>
