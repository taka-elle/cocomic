<div class='second-header edit-header'>
  <%= link_to image_tag("top-logo.png", class:"second-logo"), root_path %>
  <%= link_to 'ログアウト', destroy_shop_session_path, method: :delete, class: "edit-menu" %>
  <% unless current_page?(edit_shop_registration_path)%>
    <%= link_to '基本情報', edit_shop_registration_path, class: "edit-menu" %>
  <% end %>
  <% unless current_page?(shop_path(current_shop.id))%>
    <%= link_to 'お店のページ', shop_path(current_shop.id), class: "edit-menu" %>
  <% end %>
  <%= link_to 'コミック登録', new_shop_item_path, class: "edit-menu" %>
  <% if current_page?(edit_shop_registration_path)%>
    <%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "edit-menu" %>
  <% end %>
